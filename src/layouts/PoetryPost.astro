---
import { Image } from "astro:assets";
import BaseLayout from "./BaseLayout.astro";
import FormattedDate from "../components/FormattedDate.astro";
import type { CollectionEntry } from "astro:content";

type Props = CollectionEntry<"poetry">["data"] & {
    prevPost?: CollectionEntry<"poetry"> | null;
    nextPost?: CollectionEntry<"poetry"> | null;
};

const { title, date, image, prevPost, nextPost } = Astro.props as Props;
---

<BaseLayout title={title} description={""}>
    <main
        class="col-span-12 pt-4 md:col-span-10 md:col-start-2 xl:col-span-8 xl:col-start-3"
    >
        <div class="article-text poetry-content mx-auto w-full max-w-4xl">
            <div class="content-header mb-8 py-4">
                <h1
                    class="content-title animate-content-title text-display-sm text-primary m-0 mb-1"
                >
                    {title}
                </h1>
                <div
                    class="content-meta animate-content-meta text-body-md text-subtle font-bold"
                >
                    <FormattedDate date={new Date(date)} />
                </div>
            </div>
            {
                image && (
                    <div class="content-image animate-content-image mb-8 aspect-[2/1]">
                        <Image
                            src={image}
                            alt={`Hero for ${title}`}
                            class="h-full w-full rounded-lg object-cover"
                            loading="eager"
                        />
                    </div>
                )
            }
            <article
                class="content-body animate-content-body prose article-prose poetry-content"
            >
                <slot />
            </article>

            {(prevPost || nextPost) && (
                <nav class="post-nav mt-12 flex justify-between gap-6 border-t border-[var(--color-tertiary)] pt-8">
                    {prevPost ? (
                        <a href={`/poetry/${prevPost.id}/`} class="prev block text-subtle hover:text-secondary">
                            <span class="text-caption-md block">Previous</span>
                            <span class="text-body-md">{prevPost.data.title}</span>
                        </a>
                    ) : <div />}
                    {nextPost ? (
                        <a href={`/poetry/${nextPost.id}/`} class="next block text-right text-subtle hover:text-secondary">
                            <span class="text-caption-md block">Next</span>
                            <span class="text-body-md">{nextPost.data.title}</span>
                        </a>
                    ) : <div />}
                </nav>
            )}
        </div>
    </main>
</BaseLayout>

<style>
    /* Poetry-specific styling - preserve line breaks within stanzas */
    .poetry-content :global(p) {
        white-space: pre-line;
        margin-top: 1.5em;
        margin-bottom: 1.5em;
    }

    .poetry-content :global(blockquote) {
        padding-top: 0;
        padding-bottom: 0;
    }

    .poetry-content :global(blockquote p::before),
    .poetry-content :global(blockquote p::after) {
        content: none;
    }

    /* Enhanced image appearance */
    .content-body :global(img) {
        animation: content-fade-in 0.45s cubic-bezier(0.22, 1, 0.36, 1) both;
    }
</style>
