---
import BaseHead from "../components/BaseHead.astro";
import Navigation from "../components/Navigation.astro";

interface Props {
    title: string;
    description: string;
    class?: string;
}
const { title, description, class: className = "" } = Astro.props;
---

<html
    lang="en"
    class="max-xl:relative max-xl:max-w-full max-xl:overflow-x-hidden"
>
    <head>
        <BaseHead title={title} description={description} />
    </head>
    <body class="max-xl:relative max-xl:max-w-full max-xl:overflow-x-hidden">
        <main>
            <div class={`min-h-screen ${className}`}>
                <Navigation />
                <div
                    class="bg-theme-accent-dark pointer-events-none fixed top-0 right-0 left-0 z-[60] h-2"
                >
                </div>
                <div
                    class="mx-auto grid max-w-screen-2xl grid-cols-12 px-4 pt-20 pb-12 md:px-8 lg:px-12 xl:pl-24 xl:pr-8 xl:pt-12"
                >
                    <slot />
                </div>
            </div>
        </main>
    </body>
</html>
