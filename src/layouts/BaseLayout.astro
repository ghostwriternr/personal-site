---
import BaseHead from "../components/BaseHead.astro";
import Navigation from "../components/Navigation.astro";

interface Props {
    title: string;
    description: string;
    class?: string;
}
const { title, description, class: className = "" } = Astro.props;
---

<html
    lang="en"
    class="max-xl:relative max-xl:max-w-full max-xl:overflow-x-hidden"
>
    <head>
        <BaseHead title={title} description={description} />
    </head>
    <body class="max-xl:relative max-xl:max-w-full max-xl:overflow-x-hidden">
        <!-- Top border bar - needs high z-index so content doesn't scroll over it -->
        <div class="bg-theme-accent-dark pointer-events-none fixed top-0 left-0 right-0 z-[60] h-[10px]"></div>
        <!-- Bottom border bar - only on desktop, needs high z-index -->
        <div class="bg-theme-accent-dark pointer-events-none fixed bottom-0 left-0 right-0 z-[60] hidden h-[10px] xl:block"></div>
        <!-- Inner content panel: rounded corners on right side, inset from edges -->
        <!-- The html background (accent color) shows through as the "frame" -->
        <!-- Bottom and right inset only on desktop (xl) where we want the borders -->
        <div class="frame-rounded pointer-events-none fixed top-[10px] bottom-0 left-0 right-0 z-0 bg-theme-background xl:right-[10px] xl:bottom-[10px]"></div>
        <main class="relative z-10">
            <div class={`min-h-screen ${className}`}>
                <Navigation />
                <div
                    class="mx-auto grid max-w-screen-2xl grid-cols-12 px-4 pt-20 pb-12 md:px-8 lg:px-12 xl:pt-12 xl:pr-8 xl:pl-28"
                >
                    <slot />
                </div>
            </div>
        </main>
    </body>
</html>
