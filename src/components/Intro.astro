---
import HeadShot from "./HeadShot.astro";
import BlueskyIcon from "../icons/bluesky.astro";
import GithubIcon from "../icons/github.astro";
import GmailIcon from "../icons/gmail.astro";
import InstagramIcon from "../icons/instagram.astro";
import LinkedinIcon from "../icons/linkedin.astro";
import YtMusicIcon from "../icons/ytmusic.astro";
import XIcon from "../icons/x.astro";
---

<div class="grid grid-cols-8 items-center">
    <div class="col-span-8 pr-2 xl:col-span-6">
        <h1
            class="text-primary text-shadow-hero text-display-lg text-center xl:text-left"
        >
            Naresh Ramesh
        </h1>
        <div class="mt-4 flex justify-center xl:justify-start">
            <h2
                class="text-primary text-heading-md md:text-heading-lg xl:text-heading-xl flex flex-wrap justify-center xl:justify-start"
            >
                <div class="mr-2">Hello</div>&#8226;
                <div class="tamil mr-2 ml-2">வணக்கம்</div>&#8226;
                <div class="hindi mr-2 ml-2">नमस्ते</div>&#8226;
                <div class="telugu ml-2">స్వాగతం</div>
            </h2>
        </div>
        <!-- Mobile/Tablet headshot (shows below xl breakpoint) -->
        <div class="my-6 flex justify-center xl:hidden">
            <div class="w-full max-w-56 sm:max-w-56 md:max-w-64 lg:max-w-72">
                <HeadShot />
            </div>
        </div>
        <p
            class="text-body-lg md:text-body-xl px-2 text-center sm:px-4 md:px-0 xl:mt-4 xl:text-left"
        >
            Building agents at Cloudflare. I enjoy writing, curating music and
            making origami. Open Source maintainer &amp; supporter. Dreaming of
            the sky and a prosperous India.
        </p>
        <div
            class="mt-4 flex justify-center space-x-4 px-4 md:px-0 xl:justify-start"
        >
            <a
                href="https://github.com/ghostwriternr"
                target="_blank"
                rel="noopener noreferrer"
                aria-label="GitHub Profile"
            >
                <GithubIcon height="20" class="icon" />
            </a>
            <a
                href="https://twitter.com/ghostwriternr"
                target="_blank"
                rel="noopener noreferrer"
                aria-label="Twitter Profile"
            >
                <XIcon height="20" width="18" class="icon" />
            </a>
            <a
                href="https://www.linkedin.com/in/naresh-ramesh"
                target="_blank"
                rel="noopener noreferrer"
                aria-label="LinkedIn Profile"
            >
                <LinkedinIcon height="20" class="icon" />
            </a>
            <a href="mailto:ghostwriternr@gmail.com" aria-label="Email me">
                <GmailIcon height="20" class="icon" />
            </a>
            <a
                href="https://bsky.app/profile/ghostwriternr.me"
                target="_blank"
                rel="noopener noreferrer"
                aria-label="Bluesky Profile"
            >
                <BlueskyIcon height="20" class="icon" />
            </a>
            <a
                href="https://www.instagram.com/noresh.romesh"
                target="_blank"
                rel="noopener noreferrer"
                aria-label="Instagram Profile"
            >
                <InstagramIcon height="20" class="icon" />
            </a>
            <a
                href="https://music.youtube.com/channel/UCxWjIwpCoSwtLGSKxkfJxcw?si=OzlR1WxPnJz7Y2rc"
                target="_blank"
                rel="noopener noreferrer"
                aria-label="YouTube Music Profile"
            >
                <YtMusicIcon height="20" class="icon" />
            </a>
        </div>
    </div>
    <!-- Desktop headshot (shows at xl and above) -->
    <div class="hidden xl:col-span-2 xl:col-start-7 xl:flex">
        <HeadShot />
    </div>
</div>
