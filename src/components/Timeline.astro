---
interface Props {
    class?: string;
}

const { class: className } = Astro.props;
---

<ol class:list={["timeline", className]}>
    <slot />
</ol>

<style>
    .timeline {
        position: relative;
        padding-left: 1.5rem;
        margin: 0;
        list-style: none;
    }

    @media (min-width: 768px) {
        .timeline {
            padding-left: 2rem;
        }
    }

    .timeline::before {
        content: '';
        position: absolute;
        left: 0;
        top: 0.5rem;
        bottom: 0;
        width: 2px;
        background-color: #301a51;
        opacity: 0.3;
    }

    .timeline :global(.timeline-item) {
        position: relative;
        padding-bottom: 1.5rem;
    }

    .timeline :global(.timeline-item)::before {
        content: '';
        position: absolute;
        left: -1.8rem;
        top: 0.375rem;
        width: 12px;
        height: 12px;
        border-radius: 50%;
        background-color: #301a51;
        border: 3px solid #ffecb4;
    }

    @media (min-width: 640px) {
        .timeline :global(.timeline-item)::before {
            top: 0.375rem;
        }
    }

    @media (min-width: 768px) {
        .timeline :global(.timeline-item)::before {
            left: -2.375rem;
            width: 14px;
            height: 14px;
        }
    }

    .timeline :global(.timeline-item:last-child) {
        padding-bottom: 0;
    }
</style>